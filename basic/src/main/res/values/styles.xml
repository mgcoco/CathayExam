<resources>
    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat.Light.NoActionBar">
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorPrimaryDark</item>
        <item name="windowActionBar">false</item>
        <item name="windowNoTitle">true</item>
        <item name="android:screenOrientation">portrait</item>
    </style>

    <style name="CustomAlertDialog" parent="Theme.AppCompat.Light.Dialog.Alert">
        <item name="android:windowBackground">@android:color/transparent</item>
    </style>

    <style name="style_info_title">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:textSize">@dimen/text_size_14</item>
        <item name="android:textColor">@android:color/black</item>
        <item name="android:paddingLeft">@dimen/gap_10</item>
        <item name="android:paddingRight">@dimen/gap_10</item>
        <item name="android:paddingTop">@dimen/gap_20</item>
    </style>

    <style name="style_info_content">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:textSize">@dimen/text_size_14</item>
        <item name="android:textColor">@android:color/black</item>
        <item name="android:paddingLeft">@dimen/gap_10</item>
        <item name="android:paddingRight">@dimen/gap_10</item>
        <item name="android:paddingTop">@dimen/gap_5</item>
    </style>
</resources>