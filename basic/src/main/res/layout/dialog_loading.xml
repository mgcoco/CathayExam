<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android">

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:orientation="vertical"
        android:padding="@dimen/gap_15">

        <com.jcodecraeer.xrecyclerview.progressindicator.AVLoadingIndicatorView
            android:id="@+id/progress"
            android:layout_width="@dimen/gap_30"
            android:layout_height="@dimen/gap_30"
            android:layout_gravity="center"/>

        <TextView
            android:id="@+id/loading_message"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:layout_marginTop="@dimen/gap_20"
            android:gravity="center"
            android:text="@string/general_loading"
            android:textColor="@android:color/white" />
    </LinearLayout>
</layout>